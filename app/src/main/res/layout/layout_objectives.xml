<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/txtNum"/>




    <TextView
        android:textSize="18sp"
        android:id="@+id/txtQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imgA"
        app:layout_constraintStart_toEndOf="@+id/txtNum"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_check_bold_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/green"
        app:layout_constraintTop_toTopOf="@+id/txtQuestion"
        app:layout_constraintBottom_toBottomOf="@+id/txtQuestion"
        app:layout_constraintStart_toEndOf="@+id/txtQuestion"
        />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/radioMain"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/radioA"
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/radioB"
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/radioC"
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/radioD"
                android:text="D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@+id/radioMain"
        android:layout_margin="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>